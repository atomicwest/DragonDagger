<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.friedcircles.dragondagger.DragonDagger"
    android:background="@drawable/dragondagger_background"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/btnNote3"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:text=" "
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.713"
        android:background="@drawable/hilt_button"
        android:onClick="playnote3"/>

    <Button
        android:id="@+id/btnNote2"
        android:layout_width="53dp"
        android:layout_height="28dp"
        android:text=" "
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNote3"
        app:layout_constraintVertical_bias="0.007"
        android:background="@drawable/hilt_button"
        android:onClick="playnote2"/>

    <Button
        android:id="@+id/btnNote1"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:text=" "
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNote2"
        app:layout_constraintVertical_bias="0.055"
        android:background="@drawable/hilt_button"
        android:onClick="playnote1"/>

    <Button
        android:id="@+id/btnSwitch"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/hilt_button"
        android:onClick="switchSound"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.624" />



</android.support.constraint.ConstraintLayout>
