<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.friedcircles.dragondagger.DragonDagger"
    android:background="@drawable/dragondagger_back"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/btnNote3"
        android:layout_width="98dp"
        android:layout_height="33dp"
        android:text="Note3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.714"
        android:onClick="playnote3"/>

    <Button
        android:id="@+id/btnNote2"
        android:layout_width="98dp"
        android:layout_height="33dp"
        android:text="Note2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNote3"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="playnote2"/>

    <Button
        android:id="@+id/btnNote1"
        android:layout_width="96dp"
        android:layout_height="33dp"
        android:text="Note1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.715"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNote2"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="playnote1"/>

    <Button
        android:id="@+id/btnSwitch"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:text="Switch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.624"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="switchSound"/>

</android.support.constraint.ConstraintLayout>
