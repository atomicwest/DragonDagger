<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.friedcircles.dragondagger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
                android:name=".DragonDagger"
                android:label="@string/app_name"
                android:theme="@style/splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HelpScreen"
            android:label="@string/title_activity_help_screen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".HelpPageNext"
            android:label="@string/title_activity_help_page_next"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>